<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    
    <ImageView 
        android:id="@+id/imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/me_red"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp">
	        <TextView
	            android:id="@+id/textview_name" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="用户名"
	            android:textStyle="bold"
	            android:textSize="15sp"
	            android:layout_centerVertical="true"/>
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_alignParentRight="true">
	            <ImageView
	                android:id="@+id/imageview_score1" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/collection_grey"/>
	            <ImageView
	                android:id="@+id/imageview_score2" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/collection_grey"/>
	            <ImageView
	                android:id="@+id/imageview_score3" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/collection_grey"/>
	            <ImageView
	                android:id="@+id/imageview_score4" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/collection_grey"/>
	            <ImageView
	                android:id="@+id/imageview_score5" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/collection_grey"/>
	        </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/textview_des" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#777"/>
           
    </LinearLayout>

</LinearLayout>
